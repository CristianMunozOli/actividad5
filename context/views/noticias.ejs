<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noticias</title>
</head>
<body>
    <h1>Noticias</h1>
    <ul>
    <% 
        noticias.forEach((noticia) => {
            %>
            <h2><%= noticia.titulo %></h2>
            <p><%= noticia.texto %></p>
            
            <h3>Recursos:</h3>
            <ul>
                <% noticia.recursos.forEach((recurso) => { %>
                    <li>
                        URL: <a href="<%= recurso.url %>"><%= recurso.url %></a>
                    </li>
                <% }); %>
            </ul>

            <h3>Periodista:</h3>
            <ul>
                <% noticia.periodistas.forEach((periodista) => { %>
                    <li>
                        Nombre: <%= periodista.nombre %><br>
                        Fecha de Nacimiento: <%= periodista.fechanacimiento %>
                    </li>
                <% }); %>
            </ul>

            <hr>
            <%
        })
    %>
    </ul>
</body>
</html>